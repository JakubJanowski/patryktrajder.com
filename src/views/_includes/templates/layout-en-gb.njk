        <title>Patryk Trajder</title>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <link rel="stylesheet" href="/src/main.css"/>
        <script defer="defer" src="/src/main.js"></script>
        {% block head %}{% endblock %}
    </head>
    <body>
        <svg aria-hidden="true" style="position: absolute; width: 0; height: 0; overflow: hidden;">
            <defs>
                {% include "vectors/arrow-drop-down.sym" %}
                {% include "vectors/arrow-drop-up.sym" %}
                {% include "vectors/facebook.sym" %}
                {% include "vectors/flag-en-gb.sym" %}
                {% include "vectors/flag-pl.sym" %}
                {% include "vectors/instagram.sym" %}
                {% include "vectors/youtube.sym" %}
                {% block vectors %}{% endblock %}
            </defs>
        </svg>

        <header>
            <h1>
                <a href="/en-gb/">Patryk Trajder</a>
            </h1>
            <nav>
                <ul>
                    <li {% if tab === "home" %} class="current" {% endif %}>
                        <a href="/en-gb/">Home</a>
                    </li>
                    <li {% if tab === "about" %} class="current" {% endif %}>
                        <a href="/about/">About me</a>
                    </li>
                    <li {% if tab === "products" %} class="current" {% endif %}>
                        <a href="/products/">Products</a>
                    </li>
                    <li {% if tab === "projects" %} class="current" {% endif %}>
                        <a href="/projects/">Projects</a>
                    </li>
                    <li>
                        <a href="#contact">Contact</a>
                    </li>
                    <li>
                        <div class="language-dropdown">
                            <button class="current">
                                <svg class="icon flag">
                                    <use xlink:href="#icon-flag-en-gb"></use>
                                </svg>
                                <svg class="icon arrow">
                                    <use xlink:href="#icon-arrow-drop-down"></use>
                                </svg>
                            </button>
                            <div class="list">
                                <button data-lang="pl">
                                    <svg class="icon">
                                        <use xlink:href="#icon-flag-pl"></use>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </nav>
    </header>

    {% block body %}{% endblock %}

    <footer>
        <section id="contact" class="container">
            <div class="row">
                <h1>Contact</h1>
                <div class="social-media">
                    <a href="https://www.youtube.com/channel/UCg3hDpgzJpqBMBo4K-0aGrw" target="_blank">
                        <svg class="icon youtube">
                            <use xlink:href="#icon-youtube"></use>
                        </svg>
                    </a>
                    <a href="https://facebook.com/trajder.serwis" target="_blank">
                        <svg class="icon facebook">
                            <use xlink:href="#icon-facebook"></use>
                        </svg>
                    </a>
                    <a href="https://www.instagram.com/patryktrajder/" target="_blank">
                        <svg class="icon">
                            <use xlink:href="#icon-instagram"></use>
                        </svg>
                    </a>
                </div>
            </div>
            <div class="row links">
                <div>
                    <h3>Purchase enquiries:</h3>
                    <p>
                        <a href="mailto:sklep@trajder.com">shop@trajder.com</a>
                    </p>
                    <p>
                        <a href="https://facebook.com/trajder.serwis" target="_blank">facebook.com/trajder.serwis</a>
                    </p>
                </div>
                <div>
                    <h3>Collaboration / business questions:</h3>
                    <p>
                        <a href="mailto:patryk@trajder.com">patryk@trajder.com</a>
                    </p>
                </div>
            </div>
        </section>
        <div class="copyright">
            <div>
                <ul class="separated-list">
                    <li>&copy; Patryk Trajder. All rights reserved.</li>
                    <li>
                        Design:&#32;
                        <a href="http://github.com/jakubjanowski" target="_blank">Jakub Janowski</a>
                    </li>
                </ul>
            </div>
        </div>
    </footer>
</body>
</html>