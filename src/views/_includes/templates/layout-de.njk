        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <meta name="theme-color" content="#007cf0">
        {% block meta %}{% endblock %}

        <link rel="stylesheet" href="/src/main.css"/>
        <link rel="manifest" href="/manifest_de.json">
        <script defer="defer" src="/src/main.js"></script>
        {% block head %}{% endblock %}
    </head>
    <body>
        <svg aria-hidden="true" style="position: absolute; width: 0; height: 0; overflow: hidden;">
            <defs>
                {% include "vectors/arrow-drop-down.sym" %}
                {% include "vectors/arrow-drop-up.sym" %}
                {% include "vectors/facebook.sym" %}
                {% include "vectors/flag-de.sym" %}
                {% include "vectors/flag-en-gb.sym" %}
                {% include "vectors/flag-pl.sym" %}
                {% include "vectors/instagram.sym" %}
                {% include "vectors/youtube.sym" %}
                {% block vectors %}{% endblock %}
            </defs>
        </svg>

        <header>
            <div>
                <h1>
                    <a href="/de/" title="Startseite">Patryk Trajder</a>
                </h1>
                <h1 class="second-logo">
                    <a href="/de/" title="Startseite">Patryk Trajder</a>
                </h1>
                <div class="menu">
                    <nav>
                        <ul>
                            <li {% if tab === "home" %} class="current" {% endif %}>
                                <a href="/de/" title="Homepage">Home</a>
                            </li>
                            <li {% if tab === "about" %} class="current" {% endif %}>
                                <a href="/de/about/" title="Lernen wir uns besser kennen!">Über mich</a>
                            </li>
                            <li {% if tab === "Produkte" %} class="aktuell" {% endif %}>
                                <a href="/de/products/">Produkte</a>
                            </li>
                            <li {% if tab === "projekte" %} class="aktuell" {% endif %}>
                                <a href="/de/projects/">Projekte</a>
                            </li>
                            <li>
                                <a href="#contact">Kontakt</a>
                            </li>
                            <li>
                                <div class="language-dropdown">
                                    <button class="current" title="Sprache ändern">
                                        <svg class="icon flag">
                                            <use xlink:href="#icon-flag-de"></use>
                                        </svg>
                                        <svg class="icon arrow">
                                            <use xlink:href="#icon-arrow-drop-down"></use>
                                        </svg>
                                    </button>
                                    <div class="list">
                                        <button data-lang="en-gb" title="Englisch">
                                            <svg class="icon">
                                                <use xlink:href="#icon-flag-en-gb"></use>
                                            </svg>
                                        </button>
                                        <button data-lang="pl" title="Polnisch">
                                            <svg class="icon">
                                                <use xlink:href="#icon-flag-pl"></use>
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </nav>
                    <button class="menu-button" aria-label="Menü">
                        <span></span>
                    </button>
                </div>
            </div>
        </header>

        {% block body %}{% endblock %}

        <footer>
            <section id="contact" class="container">
                <div class="contact row">
                    <h1>Kontakt</h1>
                    <div class="social-media">
                        <div>
                            <a href="https://www.youtube.com/patryktrajder" rel="noopener" target="_blank" title="Mein Youtube-Kanal">
                                <svg class="icon youtube">
                                    <use xlink:href="#icon-youtube"></use>
                                </svg>
                            </a>
                            <a href="https://facebook.com/patryktrajder" rel="noopener" target="_blank" title="Meine Fanpage auf Facebook">
                                <svg class="icon facebook">
                                    <use xlink:href="#icon-facebook"></use>
                                </svg>
                            </a>
                            <a href="https://www.instagram.com/patryktrajder" rel="noopener" target="_blank" title="Mein Instagram-Profil">
                                <svg class="icon">
                                    <use xlink:href="#icon-instagram"></use>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="links row">
                    <div>
                        <h3>Kaufanfragen:</h3>
                        <p>
                            <a href="mailto:shop@trajder.com" rel="nofollow noopener" target="_blank" title="shop@trajder.com">shop@trajder.com</a>
                        </p>
                        <p>
                            <a href="https://facebook.com/patryktrajder" rel="noopener" target="_blank" title="Meine Fanpage auf Facebook">facebook.com/patryktrajder</a>
                        </p>
                    </div>
                    <div>
                        <h3>Kollaboration / geschäftliche Fragen:</h3>
                        <p>
                            <a href="mailto:patryk@trajder.com" rel="nofollow noopener" target="_blank" title="patryk@trajder.com">patryk@trajder.com</a>
                        </p>
                    </div>
                </div>
            </section>
            <div class="copyright">
                <div>
                    <ul class="separated-list">
                        <li>&copy; Patryk Trajder. All rights reserved.</li>
                        <li>
                            Design & development:&#32;
                            <a href="https://jakubjanowski.com/" rel="noopener" target="_blank" title="Brauchen Sie eine Website?">Jakub Janowski</a>
                        </li>
                    </ul>
                </div>
            </div>
        </footer>
    </body>
</html>